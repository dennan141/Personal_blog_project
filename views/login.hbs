<h1>Login as admin!</h1>


{{#if loginErrors.length}}
<div class="container card text-center card w-100 mt-5" style="width: 20rem;">
    <div>Can't login because:</div>
    <ul>
        {{#each loginErrors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}

<main class="text-center mt-5">
    <form action="" method="post" autocomplete="off">
        <div>
            Username: <input type="text" name="username" autocomplete="on" value="{{enteredUsername}}">
        </div>
        <div>
            Password: <input type="password" name="password">
        </div>
        <input type="submit" class="btn btn-primary" value="Login">
    </form>
</main>