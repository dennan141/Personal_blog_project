<h1 class="text-center">PORTFOLIO</h1>

<a href="/portfolio/create-project" class="btn btn-primary">Create new Project</a>

<div class="container-fluid">
    <div class="col">
        {{#if portfolio.length}}
        {{#each portfolio}}
        <div class="col sm-6 my-5">
            <div class="card text-center card w-100" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">
                        {{content}}
                    </p>
                    <a href="/portfolio/{{id}}" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <p>There are currently no projects in the portfolio.</p>
        {{/if}}
    </div>
</div>